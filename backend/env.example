# AI Dietitian Agent System - Backend Environment Variables

# ===========================================
# APPLICATION SETTINGS
# ===========================================
APP_NAME=AI Dietitian Agent System
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development

# ===========================================
# SERVER SETTINGS
# ===========================================
HOST=0.0.0.0
PORT=8000
SKIP_API_ROUTER=false

# ===========================================
# DATABASE SETTINGS (Supabase)
# ===========================================
# Supabase Project URL (get from Supabase dashboard)
SUPABASE_URL=https://your-project-id.supabase.co
# Supabase Anonymous Key (public key)
SUPABASE_ANON_KEY=your_supabase_anon_key_here
# Supabase Service Role Key (private key for admin operations)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
# Alternative database URL (if not using Supabase)
DATABASE_URL=postgresql://user:password@localhost/dietitian_db

# ===========================================
# SECURITY SETTINGS
# ===========================================
# JWT Secret Key (generate a strong random string)
SECRET_KEY=your-super-secret-jwt-key-change-in-production-make-it-very-long-and-random
ALGORITHM=HS256
# Token expiration times
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# CORS SETTINGS
# ===========================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173,https://your-frontend-domain.vercel.app

# ===========================================
# AI/OPENAI SETTINGS
# ===========================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# ===========================================
# EXTERNAL API KEYS
# ===========================================
# Nutrition API (for food data)
NUTRITION_API_KEY=your_nutrition_api_key_here
# Recipe API (for recipe generation)
RECIPE_API_KEY=your_recipe_api_key_here
# Grocery API (for grocery ordering)
GROCERY_API_KEY=your_grocery_api_key_here
# Zepto API (for grocery delivery)
ZEPTO_API_KEY=your_zepto_api_key_here
# Blinkit API (for grocery delivery)
BLINKIT_API_KEY=your_blinkit_api_key_here

# ===========================================
# REDIS SETTINGS (for caching and task queues)
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# FILE UPLOAD SETTINGS
# ===========================================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.gif,.pdf

# ===========================================
# EMAIL SETTINGS (for notifications)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# ===========================================
# AGENT SETTINGS
# ===========================================
AGENT_TIMEOUT_SECONDS=300
MAX_CONCURRENT_AGENTS=10
AGENT_RETRY_ATTEMPTS=3

# ===========================================
# MONITORING AND LOGGING
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_METRICS=true
METRICS_PORT=9090

# ===========================================
# DEPLOYMENT DETECTION
# ===========================================
# These are automatically set by hosting platforms
# RENDER=true
# VERCEL=true
# HEROKU=true
# DOCKER=true





